<% if current_user && micropost.liked_by?(current_user)%>
    <%=link_to "❤️", micropost_likes_path(micropost.id),  data: { turbo_method: :delete }, class: "micropost_likes" %>
<% else %>
    <%=link_to "♡", micropost_likes_path(micropost.id), data: { turbo_method: :post }, class: "micropost_likes" %>
<% end %>