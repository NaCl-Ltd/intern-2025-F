<% if current_user && micropost.liked_by?(current_user)%>
    <%=link_to "❤️#{@num_of_likes}", micropost_likes_path(micropost.id),  data: { turbo_method: :delete }, class: "micropost_likes" %>
<% else %>
    <%=link_to "♡#{@num_of_likes}", micropost_likes_path(micropost.id), data: { turbo_method: :post }, class: "micropost_likes" %>
<% end %>